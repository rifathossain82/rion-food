<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.Customer_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/profile_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/view_Cus_profile_id"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_person"/>

        <TextView
            android:id="@+id/view_cus_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Rifat Hossain"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_edit"
    android:layout_gravity="end"
    android:layout_marginRight="15dp"
    android:padding="15dp"
    android:layout_marginTop="-70dp"
    android:id="@+id/edit_customer_details"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_phone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="#f000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/view_cus_phone_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="013698745"
                    android:textColor="#f000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_email_p"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#f000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/view_cus_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rhrifat940279@gmail.com"
                    android:textColor="#f000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_location_p"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#f000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/view_cus_address_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foleshwor, Feni - Sadar, Feni."
                    android:textColor="#f000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>