<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#FFFFFF"
        android:id="@+id/linerID_oItem"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_marginBottom="3dp"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Renguni Hotel &amp; Restaurant"
          android:textColor="#2B2B2B"
          android:textSize="16sp"
          android:textStyle="bold"
          android:id="@+id/hotel_name_oItem"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tk 120"
          android:textColor="#2B2B2B"
          android:textStyle="bold"
          android:textSize="16sp"
          android:id="@+id/price_oItem"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          />
  </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bhaji, Special Roti, Plain Rice"
                android:paddingBottom="5dp"
                android:textColor="#2B2B2B"
                android:id="@+id/fName_oItem"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 Jul, 14:17"
                android:paddingBottom="5dp"
                android:textColor="#2B2B2B"
                android:id="@+id/date_oItem"
                />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reorder"
            android:paddingBottom="5dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B50054"
            android:id="@+id/button_oItem"
            android:textAllCaps="false"
            android:visibility="gone"
            />
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>