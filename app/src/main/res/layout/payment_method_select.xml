<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Select payment method"
            android:textColor="#202020"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_close"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:gravity="center|start"
            android:elevation="2dp"
            android:paddingRight="30dp"
            android:id="@+id/cancel_method"
            />
        <TextView
            android:id="@+id/card_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit or debit card"
            android:textColor="#202020"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_debit_card"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:gravity="center|start"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
            />
            <RadioButton
                android:id="@+id/cash_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:layout_marginLeft="12dp"
                android:padding="15dp"
                android:drawableEnd="@drawable/ic_debit_card"
                />
            <RadioButton
                android:layout_marginLeft="12dp"
                android:id="@+id/bkash_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bkash"
                android:padding="15dp"
                android:drawableEnd="@drawable/ic_debit_card"
                />
    </LinearLayout>




</androidx.cardview.widget.CardView>