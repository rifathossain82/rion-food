<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="200dp"
       app:cardCornerRadius="10dp">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/my_image"
           android:scaleType="centerCrop"
           android:id="@+id/imageView_row"
           />
   </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biriyani"
                android:textColor="#353535"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/textView_row"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tk 160"
                android:textColor="#353535"
                android:textSize="16sp"
                android:id="@+id/price_show_item"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fried with mutton"
                android:textColor="#353535"
                android:textSize="16sp"
                android:id="@+id/details_show_item"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/edit_item_id"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:id="@+id/delete_item_id"
            android:padding="10dp"/>
    </LinearLayout>



</LinearLayout>